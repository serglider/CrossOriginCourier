{
    "compilerOptions": {
        "target": "ES2015",
        "module": "ES2015",
        "rootDir": "./src",
        "declaration": true,
        "outDir": "./lib",
        "declarationDir": "./declarations",
        "sourceMap": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "allowUnreachableCode": false,
        "esModuleInterop": true
    },
    "include": ["./src/**/*"],
    "exclude": ["./node_modules/**/*"]
}
